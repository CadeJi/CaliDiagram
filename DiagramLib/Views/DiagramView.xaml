<UserControl x:Class="DiagramLib.Views.DiagramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:DiagramLib.Views"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             MinHeight="300" MinWidth="300" >
    <Border BorderThickness="1" BorderBrush="LightSkyBlue" >
        <Canvas x:Name="diagram" Background="White" cal:Message.Attach="[Event MouseLeftButtonDown] = [Action DiagramClick($eventArgs,$source)]" >
          
                <!-- connectors-->
        <ItemsControl Background="Transparent" Name="Edges" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                        <v:EdgeView cal:Bind.Model="{Binding}"  
                                    cal:Message.Attach="[Event MouseLeftButtonDown] = [Action SelectConnection($dataContext)]"
                                    FromPoint="{Binding AttachPointFrom.Location}" 
                                    ToPoint="{Binding AttachPointTo.Location}"
                                    Stroke="{Binding Stroke}" 
                                    StrokeThickness="{Binding StrokeThickness}">
                            <v:EdgeView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem>Remove</MenuItem>
                                </ContextMenu>
                            </v:EdgeView.ContextMenu>
                        </v:EdgeView>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas></Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>


        <!-- attach descriptors -->
        <ItemsControl Background="Transparent" Name="AttachDescriptors" >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas></Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- Dev node entities-->
       <ItemsControl Background="Transparent" Name="DiagramItems">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas></Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Canvas>
    </Border>
</UserControl>
