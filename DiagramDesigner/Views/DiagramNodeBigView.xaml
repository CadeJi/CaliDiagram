<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org" x:Class="DiagramDesigner.Views.DiagramNodeBigView" 
             xmlns:dl="clr-namespace:DiagramLib.ViewModels;assembly=DiagramLib"
             mc:Ignorable="d"
    Width="200" Height="72"
    >

    <UserControl.Resources>
        
        <Storyboard x:Key="timerStoryboard" Name="sb" Storyboard.TargetName="rectTimer">
            <DoubleAnimation From="60" To="0" Name="doubleAnimation" Storyboard.TargetProperty="Height" ></DoubleAnimation>
        </Storyboard>
        
    </UserControl.Resources>
   
    <Border CornerRadius="3" BorderThickness="1" BorderBrush="Red">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFEEEEEE" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid Margin="6">
        <!--<Image Source="./server-icon.jpg" Width="200" RenderOptions.BitmapScalingMode="Fant"/>-->
        <TextBox Text="S1" x:Name="Name" Margin="20,6"  FontWeight="Bold" FontSize="20" FontFamily="Verdana" 
			Background="Transparent" Foreground="Black" BorderThickness="0" BorderBrush="Transparent" TextAlignment="Center" VerticalAlignment="Center"
			HorizontalAlignment="Center" AcceptsReturn="True" MinWidth="20" 
                 IsHitTestVisible="{Binding CanEditName}">
        </TextBox>
        <Button Content="Append" cal:Message.Attach="[Event Click] = [Action ButtonPressed('send')]" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="45"/>
            <TextBlock HorizontalAlignment="Left" Margin="122,0,0,0" TextWrapping="Wrap" Name="Clock" Text="{Binding NodeSoftware.CurrentTerm, FallbackValue=1}"
                    FontWeight="Bold" VerticalAlignment="Top" FontSize="20" Padding="20,2"/>

            <Border BorderThickness="1" BorderBrush="Black" Background="Orange" CornerRadius="2" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" Name="State" Text="{Binding NodeSoftware.State,FallbackValue='Follower'}"           
                    FontSize="15" MinWidth="80"/>
            </Border>
            <Rectangle Name="rectTimer" Width="10"  Fill="Green" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Rectangle>
        
    </Grid>
    </Border>
</UserControl>
