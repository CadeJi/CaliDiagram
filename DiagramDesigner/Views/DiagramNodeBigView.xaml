<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org" x:Class="DiagramDesigner.Views.DiagramNodeBigView" 
             mc:Ignorable="d" 
             Background="DeepSkyBlue">
    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <Image Source="./server-icon.jpg" Width="200" RenderOptions.BitmapScalingMode="Fant"/>
        <TextBox Text="S1" x:Name="Name" Margin="20,6" Foreground="White"  FontWeight="Bold" FontSize="20" FontFamily="Verdana" 
			Background="Transparent" BorderThickness="0" BorderBrush="Transparent" TextAlignment="Center" VerticalAlignment="Center"
			HorizontalAlignment="Center" AcceptsReturn="True" MinWidth="20">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="6"  RenderingBias="Performance"  Color="#FF3756E2" ShadowDepth="1"/>
            </TextBox.Effect>
        </TextBox>
        <Button Content="Send" HorizontalAlignment="Left" Margin="10,4,0,0"  VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
